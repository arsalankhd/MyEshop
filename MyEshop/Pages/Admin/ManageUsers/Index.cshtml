@page
@model MyEshop.Pages.Admin.ManageUsers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>لیست کاربران</h1>
<p>
    <a asp-page="Create" class="btn btn-success">ساخت کاربر جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].IsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-warning">ویرایش</a> |
                <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-info">مشخصات</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-danger mt-2">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
